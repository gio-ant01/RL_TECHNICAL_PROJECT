<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="exit_door">
    <static>false</static>

    <!-- Rigid door frame that stays fixed to the world -->
    <link name="door_frame">
      <pose>0 0 0 0 0 0</pose>
      <inertial>
        <mass>10.0</mass>
        <inertia>
          <ixx>1.0</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>1.0</iyy>
          <iyz>0</iyz>
          <izz>1.0</izz>
        </inertia>
      </inertial>

      <!-- Left frame upright -->
      <collision name="frame_left_collision">
        <pose>-0.5 0 0.5 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 0.1 1.0</size>
          </box>
        </geometry>
      </collision>
      <visual name="frame_left_visual">
        <pose>-0.5 0 0.5 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 0.1 1.0</size>
          </box>
        </geometry>
        <material>
          <ambient>0.4 0.3 0.2 1</ambient>
          <diffuse>0.4 0.3 0.2 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>

      <!-- Right frame upright -->
      <collision name="frame_right_collision">
        <pose>0.5 0 0.5 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 0.1 1.0</size>
          </box>
        </geometry>
      </collision>
      <visual name="frame_right_visual">
        <pose>0.5 0 0.5 0 0 0</pose>
        <geometry>
          <box>
            <size>0.1 0.1 1.0</size>
          </box>
        </geometry>
        <material>
          <ambient>0.4 0.3 0.2 1</ambient>
          <diffuse>0.4 0.3 0.2 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>

      <!-- Frame top beam -->
      <collision name="frame_top_collision">
        <pose>0 0 1.05 0 0 0</pose>
        <geometry>
          <box>
            <size>1.2 0.1 0.1</size>
          </box>
        </geometry>
      </collision>
      <visual name="frame_top_visual">
        <pose>0 0 1.05 0 0 0</pose>
        <geometry>
          <box>
            <size>1.2 0.1 0.1</size>
          </box>
        </geometry>
        <material>
          <ambient>0.4 0.3 0.2 1</ambient>
          <diffuse>0.4 0.3 0.2 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
        </material>
      </visual>
    </link>

    <!-- Sliding door panel -->
    <link name="door_panel">
      <pose>0 -0.025 0.5 0 0 0</pose>
      <inertial>
        <mass>4.0</mass>
        <inertia>
          <ixx>1.3367</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>2.6667</iyy>
          <iyz>0</iyz>
          <izz>1.3367</izz>
        </inertia>
      </inertial>
      <collision name="panel_collision">
        <geometry>
          <box>
            <size>1.0 0.05 1.0</size>
          </box>
        </geometry>
      </collision>
      <visual name="panel_visual">
        <geometry>
          <box>
            <size>1.0 0.05 1.0</size>
          </box>
        </geometry>
        <material>
          <ambient>0.6 0.2 0.2 1</ambient>
          <diffuse>0.8 0.3 0.3 1</diffuse>
          <specular>0.2 0.2 0.2 1</specular>
        </material>
      </visual>
      <!-- White backing plate for the ArUco marker -->
      <visual name="marker_backing_visual">
        <pose>0 0.0275 0.0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.15 0.005 0.15</size>
          </box>
        </geometry>
        <material>
          <ambient>0.95 0.95 0.95 1</ambient>
          <diffuse>0.98 0.98 0.98 1</diffuse>
          <specular>0.3 0.3 0.3 1</specular>
        </material>
      </visual>
      <!-- ArUco marker visual attached to the door panel (corridor-facing side) -->
      <visual name="aruco_marker_visual">
        <pose>0 0.0305 0.0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.12 0.0005 0.12</size>
          </box>
        </geometry>
        <material>
          <ambient>1 1 1 1</ambient>
          <diffuse>1 1 1 1</diffuse>
          <specular>0.1 0.1 0.1 1</specular>
          <pbr>
            <metal>
              <albedo_map>model://exit_door/aruco_tag.png</albedo_map>
            </metal>
          </pbr>
        </material>
      </visual>
    </link>

    <!-- Fix the frame to the world so that only the panel moves -->
    <joint name="frame_world_fixed" type="fixed">
      <parent>world</parent>
      <child>door_frame</child>
    </joint>

    <!-- Prismatic joint for the sliding panel -->
    <joint name="door_slide" type="prismatic">
      <parent>door_frame</parent>
      <child>door_panel</child>
      <pose>0 0 1.0 0 0 0</pose>
      <axis>
        <xyz>1 0 0</xyz>
        <use_parent_model_frame>true</use_parent_model_frame>
        <limit>
          <lower>0.0</lower>
          <upper>0.9</upper>
        </limit>
        <dynamics>
          <damping>4.5</damping>
          <friction>0.3</friction>
        </dynamics>
      </axis>
    </joint>

    <!-- Gazebo system plugin that listens to /door_slide/cmd_pos and applies the desired offset -->
    <plugin filename="ignition-gazebo-joint-position-controller-system"
            name="ignition::gazebo::systems::JointPositionController">
      <joint_name>door_slide</joint_name>
      <topic>/door_slide/cmd_pos</topic>
      <p_gain>4.0</p_gain>
      <i_gain>0.5</i_gain>
      <d_gain>0.5</d_gain>
    </plugin>
    
  </model>
</sdf>